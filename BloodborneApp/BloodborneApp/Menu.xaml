    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BloodborneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/menuWallpaper.png">
            </ImageBrush>
        </Grid.Background>
        <Button x:Name="button" Content="Weapons" Foreground="Khaki" HorizontalAlignment="Left" Margin="126,207,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="button1" Content="Key Items" Foreground="Khaki" HorizontalAlignment="Left" Margin="122,324,0,0" VerticalAlignment="Top" Click="button1_Click"/>
        <Button x:Name="button2" Content="Bosses" Foreground="Khaki" HorizontalAlignment="Left" Margin="131,264,0,0" VerticalAlignment="Top" Click="button2_Click"/>
    </Grid>
</Page>
