        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="25,411,0,0" VerticalAlignment="Top" Width="311">
            <TextBlock x:ConnectionId='4' x:Name="textBlock" Foreground="Khaki" TextWrapping="Wrap">
            	<Run Text="&quot;Badge crafted by the Powder Kegs, the heretics of the Workshop."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="The Powder Kegs adoration of complex design and big booms culminated in weapon designs that contrast with those traditionally of the Workshop."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="The late Powder Kegs, bless their souls, had a motto: If a weapon ain't got kick, it just ain't worth it.&quot;&quot;"/>
            </TextBlock>
        </ScrollViewer>
        <TextBlock x:ConnectionId='3' x:Name="textBlock1" Foreground="Khaki" HorizontalAlignment="Left" Margin="103,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185">
        	<Run Text="Powder Keg "/>
        	<Run Text="Hunter Badge"/>
        </TextBlock>
    </Grid>
